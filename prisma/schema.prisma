  interviewCompletedAt  DateTime?
  interviewNotes        String?             @db.Text
  interviewResult       String?

  // Acceptance & Terms
  termsAcceptedAt       DateTime?
  privacyAcceptedAt     DateTime?
  nonRefundAcknowledgedAt DateTime?

  // Payment & Account
  payment               ProspectPayment?
  coachProfileId        String?             @unique
  coachProfile          CoachProfile?       @relation(fields: [coachProfileId], references: [id])

  // Admin tracking
  assignedAdminId       String?

  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt

  statusHistory         ProspectStatusHistory[]
  calendarBookings      CalendarBooking[]

  @@map("prospects")
}

model ProspectStatusHistory {
  id          String         @id @default(cuid())
  prospectId  String
  prospect    Prospect       @relation(fields: [prospectId], references: [id], onDelete: Cascade)
  fromStatus  ProspectStatus?
  toStatus    ProspectStatus
  changedBy   String?
  notes       String?        @db.Text
  createdAt   DateTime       @default(now())

