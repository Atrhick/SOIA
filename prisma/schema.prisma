  prospect        Prospect              @relation(fields: [prospectId], references: [id], onDelete: Cascade)

  method          PaymentMethod
  status          ProspectPaymentStatus @default(PENDING)
  amount          Decimal               @db.Decimal(10, 2)
  currency        String                @default("USD")

