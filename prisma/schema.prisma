  manualReference       String?
  manualApprovedBy      String?
  manualApprovedAt      DateTime?

  paidAt          DateTime?
  failedAt        DateTime?
  failureReason   String?

  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt

  @@map("prospect_payments")
}

model AdminNotification {
