  posts        ChannelPost[]
  members      ChannelMember[]

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@map("collaboration_channels")
}

model ChannelMember {
  id        String               @id @default(cuid())
  channelId String
  channel   CollaborationChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  userId    String

  joinedAt  DateTime             @default(now())

  @@unique([channelId, userId])
  @@map("channel_members")
}

model ChannelPost {
  id        String               @id @default(cuid())
  channelId String
  channel   CollaborationChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  authorId  String               // User ID

  content   String               @db.Text
  isPinned  Boolean              @default(false)

  replies   ChannelPostReply[]

  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@map("channel_posts")
}

model ChannelPostReply {
  id        String      @id @default(cuid())
  postId    String
  post      ChannelPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId  String      // User ID

  content   String      @db.Text

  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("channel_post_replies")
}

model SharedDocument {
  id           String   @id @default(cuid())
  uploaderId   String   // User ID

  title        String
  description  String?
  fileName     String
  fileUrl      String
  fileSize     Int?
  mimeType     String?

  // Access control
  isPublic     Boolean  @default(false)
  allowedRoles String[] // ["ADMIN", "COACH", "AMBASSADOR"]

  category     String?  // Optional category/folder

