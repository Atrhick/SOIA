// ============================================
// ADMIN CALENDARS & BOOKING SYSTEM
// ============================================

enum CalendarType {
  BOOKING     // Allows slot booking (e.g., orientation)
  EVENTS      // Display-only events (e.g., SOIA events)
}

enum CalendarVisibility {
  GLOBAL        // Visible to all coaches and ambassadors
  COACHES_ONLY  // Visible only to coaches
  AMBASSADORS_ONLY // Visible only to ambassadors
  CUSTOM        // Custom user-level access
  PUBLIC        // Visible to public (prospects)
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

model AdminCalendar {
  id              String              @id @default(cuid())
  name            String
  description     String?             @db.Text
  type            CalendarType        @default(EVENTS)
  visibility      CalendarVisibility  @default(GLOBAL)
  color           String              @default("#3B82F6") // Tailwind blue-500

  // For booking calendars
  slotDurationMinutes Int?            @default(60)
  bufferMinutes       Int?            @default(0)
  maxBookingsPerSlot  Int?            @default(1)
  requiresApproval    Boolean         @default(false)

  // Public access for prospects
  isPublicBookable    Boolean         @default(false)
  publicSlug          String?         @unique

  // Default meeting link for bookings
  meetingLink         String?

  isActive        Boolean             @default(true)
  createdBy       String
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  // Relations
  slots           CalendarSlot[]
  events          CalendarEvent[]     @relation("AdminCalendarEvents")
  bookings        CalendarBooking[]
  access          CalendarAccess[]

  @@map("admin_calendars")
}

model CalendarSlot {
  id              String          @id @default(cuid())
  calendarId      String
  calendar        AdminCalendar   @relation(fields: [calendarId], references: [id], onDelete: Cascade)

  // Slot timing
  dayOfWeek       Int             // 0=Sunday, 1=Monday, ..., 6=Saturday
  startTime       String          // HH:MM format in calendar timezone
  endTime         String          // HH:MM format
  timezone        String          @default("America/Los_Angeles")

  // Capacity
  maxBookings     Int             @default(1)

  // Recurring or specific date
  isRecurring     Boolean         @default(true)
  specificDate    DateTime?       // For one-time slots

  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  bookings        CalendarBooking[]

  @@map("calendar_slots")
}

model CalendarBooking {
  id              String          @id @default(cuid())
  calendarId      String
  calendar        AdminCalendar   @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  slotId          String?
  slot            CalendarSlot?   @relation(fields: [slotId], references: [id], onDelete: SetNull)
  eventId         String?
  event           CalendarEvent?  @relation(fields: [eventId], references: [id], onDelete: SetNull)

  // Booking details
  bookingDate     DateTime        // The actual date of the booking
  startTime       DateTime
  endTime         DateTime
  timezone        String          @default("America/Los_Angeles")

  // Who booked
  userId          String?         // For logged-in users
  prospectId      String?         // For prospects
  prospect        Prospect?       @relation(fields: [prospectId], references: [id], onDelete: SetNull)

  // Booker info (for guests or prospects)
  bookerName      String
  bookerEmail     String
  bookerPhone     String?

  // Status
  status          BookingStatus   @default(PENDING)
  notes           String?         @db.Text

  // Admin actions
  confirmedBy     String?
  confirmedAt     DateTime?
  cancelledBy     String?
  cancelledAt     DateTime?
  cancellationReason String?      @db.Text

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("calendar_bookings")
}

model CalendarAccess {
  id              String          @id @default(cuid())
  calendarId      String
  calendar        AdminCalendar   @relation(fields: [calendarId], references: [id], onDelete: Cascade)

  // Access for specific user
  userId          String
  canView         Boolean         @default(true)
  canBook         Boolean         @default(true)

  createdAt       DateTime        @default(now())

  @@unique([calendarId, userId])
  @@map("calendar_access")
}
